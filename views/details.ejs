<%- include ('partials/header') %>
<%- include ('partials/messages') %>

<a href="/admin/latestnews %>" class="btn">ADD NEW ARTICLE</a>
<a href="/" class="btn">SIGN OUT</a>

   
    <% record.forEach(function(records){ %>
    <a href="/admin/<%= records._id %>" class="btn">DELETE ARTICLE</a>

    <section class="home">
        <div class="content">
        <h3><%= records.title %></h3>
        <span><%= records.subtitle %></span>
    </div>
    <div class="image">
        <img src="data:image/<%=records.upload.contentType%>;base64,<%=records.upload.data.toString('base64')%>" class="card-img-top" alt="...">
    </div>

    <div class="content">
        <p><%= records.article %></p>
        <small>Posted On: <%= records.date.toLocaleDateString() %></small>
    </div>

</section>
    
    <% }) %>


<%- include ('partials/footer') %>

